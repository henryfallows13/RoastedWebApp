@page
<!--
@model RoastedWebApp.Pages.Products.IndexModel
-->

@{
    ViewData["Title"] = "Menu";
}

<div id="home"></div>
<div class="sub-header">
    <h2 style="color:black">MENU</h2>
</div>
@foreach (var item in Model.Product)
{
    <div class="card card-image mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden" style="background-image: url(@Html.DisplayFor(modelItem => item.ImageLink)); background-position: center; background-size: cover; height: 500px;">
        <div class="my-3 py-3 txt_size" style="width:40%; position:center; left:30%">
            <h2 class="display-5" style="color:black">@Html.DisplayFor(modelItem => item.Name)</h2>
            <p class="lead" style="color:black">@Html.DisplayFor(modelItem => item.Desription)</p>
            <a class="btn btn-outline-primary button_buy" style="color:black">@Html.DisplayFor(modelItem => item.Price) $</a>
        </div>
    </div>
}
<!--SUBHEADER-->
<div id="get_directions"></div>
<div class="sub-header">
    <h2 style="color:black">CONTACT US</h2>
</div>

<!--MAP-->
<div class="d-md-flex flex-md-equal w-100">
    <div class="card" style="width: 100%;">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7220.343021158678!2d55.27512052514956!3d25.197437935584095!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e5f682829c85c07%3A0xa5eda9fb3c93b69d!2sThe%20Dubai%20Mall!5e0!3m2!1sen!2suk!4v1603384517493!5m2!1sen!2suk"
                width="fit-content"
                height="250px"
                frameborder="0"
                style="border:0;"
                allowfullscreen=""
                aria-hidden="false"
                tabindex="0">
        </iframe>
    </div>
</div>
<script src="main.js"></script>
